{{#if model.username}}
    <h1>{{model.username}}</h1>
    <h3>Ratings</h3>
    <table class="table table-hover">
        <thead>
            <th><h4>Title</h4></th>
            <th><h4>Rating</h4></th>
        </thead>
        <tbody>
            {{#each model.ratings as |rating|}}
                {{#link-to 'movie' rating.id tagName="tr" class="active"}}
                    <td><h3>{{rating.movieTitle}}</h3></td>
                    <td><h3><strong>{{rating.value}}</strong>/10</h3></td>
                {{/link-to}}
            {{/each}}
        </tbody>
    </table>
{{else}}
    <h1>Unknown User</h1>
{{/if}}
