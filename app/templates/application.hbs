<!--NAV BAR-->
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                <span class="glyphicon glyphicon-user"></span>
            </button>
            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#searchbar">
                <span class="glyphicon glyphicon-search"></span>
            </button>
            {{#link-to 'index'}}<a class="navbar-brand" ><img src="/images/logoLight.png" height="100%"/></a>{{/link-to}}
        </div>
        <div id="searchbar" class="collapse navbar-collapse">
            <div class="float-lg-middle col-lg-6 col-md-6 col-sm-5 search-form">
                {{input type="text" id="searchInput" class="form-control col-md-12 search-input" placeholder="Search" enter="querySearch"}}
            </div>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right" style="margin-right: 80px;">
                {{#if session.isAuthenticated}}
                    {{#link-to 'user' model.username tagName="li" class="float-lg-right"}}
                        <a class="dropdown-toggle">{{model.username}}</a>
                    {{/link-to}}
                    <li class="float-lg-right"  {{action "signOut"}}>
                        <a class="dropdown-toggle">Log Out</a>
                    </li>
                {{else}}
                    {{#link-to 'login' tagName="li" class="float-lg-right"}}
                        <a class="dropdown-toggle">Log In</a>
                    {{/link-to}}
                {{/if}}
            </ul>
        </div>
    </div>
</div>
<!--END NAV BAR-->
